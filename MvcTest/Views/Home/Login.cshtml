@model MvcTest.Models.Views.UserViewModel

<h2>Login</h2>

<body>
    <div>
        @using (Html.BeginForm())
        {
            <div>

                <div>
                    @Html.HiddenFor(m => m.User.Id)
                    @Html.HiddenFor(m => m.User.FirstName)
                    @Html.HiddenFor(m => m.User.Surname)
                    @Html.LabelFor(m => m.User.Email, new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(m => Model.User.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail" } })
                    </div>
                </div>

                <div>
                    @Html.LabelFor(m => Model.User.Password, new { @class = "control-label col-md-2" })
                    <div>
                        @Html.PasswordFor(m => Model.User.Password)
                    </div>
                </div>

            </div>
            if (MvcTest.Common.Helpers.LoginManager.GetAccessError())
            {
                <div>
                    Login Failed
                </div>
            }

            if (MvcTest.Common.Helpers.LoginManager.GetLoginDisableStatus())
            {
                <hr />
                    <div>
                        You've exceeded the maximum number of login attempts.<br />
                        Try again later.
                    </div>

            }
            else
            {
                <div class="form-group has-feedback">
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                    <input type="submit" value="Login" class="btn btn-success" placeholder="Login">
                </div>
            }
        }
        <hr />
        <div>
            @Html.ActionLink("Dont have an account? Sign up now!", "Register")
        </div>
    </div>
</body>