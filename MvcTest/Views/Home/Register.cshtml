@model MvcTest.Models.Views.UserViewModel

<h2>Register</h2>

@using (Html.BeginForm())
{
    <div>
        <div>
            @Html.LabelFor(m => Model.User.FirstName, new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(m => Model.User.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Imię" } })
                @Html.ValidationMessageFor(m => Model.User.FirstName)
            </div>
        </div>

        <div>
            @Html.LabelFor(m => Model.User.Surname, new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(m => Model.User.Surname, new { htmlAttributes = new { @class = "form-control", placeholder = "Nazwisko" } })
                @Html.ValidationMessageFor(m => Model.User.Surname)
            </div>
        </div>

        <div>
            @Html.LabelFor(m => Model.User.Email, new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(m => Model.User.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "E-mail" } })
                @Html.ValidationMessageFor(m => Model.User.Email)
            </div>
        </div>

        <div>
            @Html.LabelFor(m => Model.User.Password, new { @class = "control-label col-md-2" })
            <div>
                @Html.PasswordFor(m => Model.User.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => Model.User.Password)
            </div>
        </div>

        <div>
            @Html.LabelFor(m => Model.RePassword, new { @class = "control-label col-md-2" })
            <div>
                @Html.PasswordFor(m => Model.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => Model.RePassword)
            </div>
        </div>

        <div class="form-group has-feedback">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <input type="submit" value="Create Account" class="btn btn-success" />
        </div>


            @if (MvcTest.Common.Helpers.RegisterHelper.GetPasswordsInvalid())
            {
                <div>
                    Passwords are not the same
                </div>
            }
        
    </div>
}